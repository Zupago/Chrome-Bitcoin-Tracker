{
  "name": "ZuPago Bitcoin BTC/BCH Tracker & Converter",
  "short_name": "ZP BTC/BCH Tracker & Converter",
  "version": "1.0.3",
  "description": "Helps Calculate Current Bitcoin BTC/BCH Exchange Rates",
  "permissions": [
    "tabs",
    "storage",
    "https://*.zupago.pe/*",
    "https://*.bitcoinaverage.com/*",
    "http://*.zupago.pe/*",
    "http://*.bitcoinaverage.com/*"
  ],
  "browser_action": {
    "default_icon": "images/icon128.png",
